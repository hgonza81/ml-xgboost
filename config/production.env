# Production environment configuration
ENVIRONMENT=production

# API Configuration
# API_KEY=<set-via-secrets-manager>
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
# CORS_ORIGINS=<comma-separated-production-domains>
HTTPS_ONLY=true

# MLflow Configuration
# MLFLOW_TRACKING_URI=<production-mlflow-server>
# MLFLOW_ARTIFACT_ROOT=s3://<bucket>/artifacts
# MLFLOW_BACKEND_STORE_URI=<production-database>
# MLFLOW_DEFAULT_ARTIFACT_ROOT=s3://<bucket>/artifacts
# MLFLOW_S3_BUCKET=<production-bucket>
AWS_REGION=us-east-1

# Model Configuration
MODEL_NAME=xgboost_classifier
MODEL_STAGE=production

# Security Configuration
SECRETS_MANAGER_ENABLED=true
PARAMETER_STORE_ENABLED=true
# IAM_ROLE_ARN=<production-iam-role>

# Monitoring Configuration
CLOUDWATCH_ENABLED=true
# SNS_TOPIC_ARN=<production-sns-topic>
# PAGERDUTY_INTEGRATION_KEY=<pagerduty-key>
LOG_RETENTION_DAYS=30